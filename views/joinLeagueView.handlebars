
<div class="container">
    <div class="table-responsive">
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Rule</th>
                <th>Points</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{this.leagueRule}}</td>
                    <td>{{this.rulePoints}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <h3>Does this league sound interesting to you? Join it and draft your picks! </h3>
    <form method="post" action="/joinLeague/{{id}}">
        <table class="table table-condensed">
            <tbody>
            <tr>
                <th width="200">Full Name</th>
                <td><input type="text" name="leagueMemberName" required>
            </tr>
            </tbody>
            <tfooter>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save & Next"
                               class="btn btn-success">
                        <input type="button" value="Cancel"
                               class="btn btn-danger" onclick="cancelAdd()">
                    </td>
                </tr>
            </tfooter>
        </table>
    </form>
</div>